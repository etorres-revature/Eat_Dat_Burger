<div class="row">
    <div class="col-1 mb-5"></div>
    <div class="col-4 mb-5">
        <div class="card">
            <div class="card-header text-center">
                <h2>Burgers to eat</h2>
            </div>
            <div class="card-body">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col-1 mb-5"></div>

    <div class="col-4 mb-5">
        <div class="card">
            <div class="card-header text-center">
                <h2>Devoured burgers</h2>
            </div>
            <div class="card-body">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-1 mb-5"></div>
</div>