{{!-- jumbotron --}}
<div class="jumbotron text-center">
    {{!-- displaying lead heading --}}
    <h1 class="display-4">BURGER TIME!!</h1>
    {{!-- picture of burger from img file using the static method in the express server, which reads from the public folder --}}
    <img class="mb-3" src="/assets/img/background/burger.jpg" alt="picture of burger" id="burger" />
    {{!-- form to add burger --}}
    <form class="create-form">
        <div class="form-group">
            <div class="form-row my-2">
                {{!-- label for text input --}}
                <label class="col-lg-5 col-sm-6 text-right" for="burger"><strong>Cook up a new Burger:</strong></label>
                {{!-- text input for new burger --}}
                <div class="col-lg-4 col-sm-6">
                    <input type="text" class="form-control" id="newBurger" name="burger"
                        placeholder="type in burger here" />
                </div>
            </div>
        </div>

        <div class="form-group">
            {{!-- label for devour radio buttons --}}
            <label class="control-label pr-3" for="devour"><strong>Devour: </strong></label>
            {{!-- radio button to set burger to devoured --}}
            <input type="radio" name="devour" value="1" />Devoured
            {{!-- radio button to set burger to ready to eat --}}
            <input type="radio" name="devour" value="0" checked="" /> Ready to
            eat!
        </div>
        {{!-- button to submit newly created burger --}}
        <button type="submit" class="btn btn-success">Add this burger!</button>
    </form>
</div>

{{!-- handlebars template to include in main body with three "{}"'s --}}
<div class="row">
    <div class="col-1 mb-5"></div>
    <div class="col-4 mb-5">
        {{!-- card to hold burgers that are "ready to eat" --}}
        <div class="card">
            <div class="card-header text-center">
                <h2>Burgers to eat</h2>
            </div>
            <div class="card-body">
                {{!-- ul to hold list of ready to eat burgers --}}
                <ul>
                    {{!-- handlebars loop function that takes in burgers object --}}
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{!-- express function to tell express to put the burger partial template if the devoured column is "false" --}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{!-- closing the handlebars function --}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col-2 mb-5"></div>

    <div class="col-4 mb-5">
        <div class="card">
            {{!-- card to hold burgers that need to "Cook again" --}}
            <div class="card-header text-center">
                <h2>Devoured burgers</h2>
            </div>
            <div class="card-body">
                {{!-- ul to hold list of burgers to cook again --}}
                <ul>
                    {{!-- handlebars loop function that takes in burgers object --}}
                    {{#each burgers}}
                    {{#if devoured}}
                    {{!-- express function to tell express to put the burger partial template if the devoured column is "true" --}}
                    {{> burgers/burger-block devoured=true}}
                    {{/if}}
                    {{!-- closing the handlebars function --}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-1 mb-5"></div>
</div>